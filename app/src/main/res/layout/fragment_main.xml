<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainContainer"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shafir.irena.vetstreet.MainFragment"
    android:background="#4597be">


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnNews"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:elevation="@dimen/bootstrap_h4_text_size"
        android:text="@string/news"
        android:onClick="news"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDoc" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnHealth"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginTop="26dp"
        android:elevation="@dimen/bootstrap_h4_text_size"
        android:text="Health"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintTop_toBottomOf="@+id/ivKids"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnNews"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnTips"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/bootstrap_h4_text_size"
        android:text="Tips"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
        app:bootstrapBrand="danger"
        app:bootstrapSize="lg"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintTop_toBottomOf="@+id/btnHealth"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnHealth"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnHealth"
        app:layout_constraintHorizontal_bias="0.0" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnPetGeeks"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/bootstrap_h4_text_size"
        android:text="Pet Geeks"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintTop_toBottomOf="@+id/btnHealth"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnNews"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>